# Studio Pickens Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# API Base URL (used by frontend)
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
REACT_APP_API_BASE_URL=http://localhost:3001

# CORS Configuration
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Static Files Configuration
STATIC_FILES_PATH=./public
IMAGES_PATH=./public/images

# Data Storage Configuration
DATA_PATH=./data

# Security Configuration (REQUIRED for authentication)
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password
ADMIN_EMAIL=admin@studiopickens.com

# Deployment Configuration
# Set to 'true' in production to enable additional security measures
PRODUCTION_MODE=false

# Vercel Specific (when deploying to Vercel)
# VERCEL=1
# VERCEL_URL=your-vercel-url.vercel.app